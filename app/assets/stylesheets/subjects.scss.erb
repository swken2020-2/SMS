#subject_plate {
    margin-bottom: 1rem;
    margin-left: 1em;
    margin-right: 1em;
    padding-right: 1em;
    padding-left: 1em;
    height: 200px;
    
    background-size: cover;
    border-radius: 10px;
        
    position: relative;
    
    .link {
        a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        }
    }
    
    .name {
        font-size: xxx-large;
        
    }
    
    .button {
        position: absolute;
        right: 5px;
        bottom: 5px;
        
        background-color: transparent;
        appearance: none;
        border: none;
        outline: none;
        border-radius: 5px;
        //padding: 5px;
        font-size: normal;
        font-weight: bold;
        
        a {
        
        }
    }
    
    .decoration {
        text-shadow:
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white,
            -1px -1px 1px white,
            1px 1px 1px white,
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white;
    }
}