#s_toolbar {
    padding-top: 1em;
    padding-bottom: 1em;
    
    padding-left: 3em;
    padding-right: 3em;
    
    position: relative;
    justify-content: space-evenly;;
    display: flex;
    flex-wrap: wrap;
    
    //max-width: 10em;
    
    flex: 1;
    
    border-bottom: 3px dashed  LIGHTBLUE;
    
    .text {
        background-color:#ffe5ff;
        margin-right: 0.5em;
        margin-left: 0.5em;
        padding-right: 1em;
        padding-left: 1em;
        margin-bottom: 3px;
        white-space: nowrap;
        text-align: center;
        vertical-align: middle;
        
        text-align: center;
        min-width: auto;
        width: auto;
        white-space: nowrap;
    
        position: relative;
        flex: 6;
        
        border-radius: 25px;
        border: 2px solid #999;
        
        &:hover {
            background-color:#efe0ff;
        }
        
        .url{
            a {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
        }
    }
}

#notice {
    padding-left: 1.5em;
    padding-right: 1.5em;
    
    padding-top: 2em;
    padding-bottom: 2em;

    position: relative;
    justify-content: space-between;
    display: flex;
    flex-wrap: wrap;
    
    //max-width: 10em;
    border-bottom: 3px dashed  LIGHTBLUE;
    flex: 1;
    
    .text {
        font-size: xx-large;
        font-weight: bold;
        
        background-color: #efffe0;
        margin-right: 2em;
        margin-left: 2em;
        padding-right: 1em;
        padding-left: 1em;
        margin-bottom: 3px;
        text-align: center;
        vertical-align: middle;
        min-width: auto;
        width: auto;
    
        position: relative;
        flex: 6;
        
        border-radius: 25px;
        border: 4px solid #999;
        
        &:hover {
            background-color: #d6ffd6;
        }
        
        .url{
            a {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
        }
    }
}

#subject {
    
    .title {
        padding-top: 20px;
        padding-right: 20px;
        padding-left: 20px;
        padding-bottom: 10px;
        background-size: cover;
        background-position: left;
        
        border-bottom: 3px dashed  LIGHTBLUE;
        
        h1 {
            margin: 0;
            margin-bottom: 15px;
            text-align: center;
        }
    }
}

#group {
    margin-left: 1em;
    margin-right: 1em;
    position: relative;
    justify-content: space-between;
    display: flex;
    flex-wrap: wrap;
    flex: 1;
}

#subject_plate {
    //margin: auto;
    margin-bottom: 1em;
    margin-left: 0.5em;
    margin-right: 0.5em;
    padding-right: 1em;
    padding-left: 1em;
    height: 150px;
    max-height: 200px;
    min-width: 250px;
    //width: 300px;
    //max-width: 40%;
    background-size: cover;
    background-position: left;
    border-radius: 15px;
        
    position: relative;
    flex: 1;
    border: 3px solid WHITE;
    
    &:hover {
        //filter: opacity(50%);
        cursor: pointer;
        border: 3px solid RED;
    }
    
    .link {
        a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        }
    }
    
    .name {
        padding-top: 5px;
        font-size: xx-large;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .button {
        position: absolute;
        right: 5px;
        bottom: 5px;
        
        background-color: transparent;
        appearance: none;
        border: none;
        outline: none;
        border-radius: 5px;
        //padding: 5px;
        font-size: normal;
        font-weight: bold;
        
        a {
        
        }
    }
    
    .decoration {
        text-shadow:
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white,
            -1px -1px 1px white,
            1px 1px 1px white,
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white;
    }
}