#group {
    margin-top: 1em;
    margin-left: calc(5% + 0.5em);
    margin-right: calc(5% + 0.5em);
    //margin-left: 1em;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    flex: 1;
}

#subject_plate {
    //margin: auto;
    margin-bottom: 1em;
    margin-left: 0.5em;
    margin-right: 0.5em;
    padding-right: 1em;
    padding-left: 1em;
    height: 150px;
    max-height: 200px;
    min-width: 250px;
    //width: 300px;
    //max-width: 40%;
    background-size: cover;
    border-radius: 10px;
        
    position: relative;
    flex: 1;
    border: 3px solid WHITE;
    
    &:hover {
        //filter: opacity(50%);
        cursor: pointer;
        border: 3px solid RED;
    }
    
    .link {
        a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        }
    }
    
    .name {
        padding-top: 5px;
        font-size: xx-large;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .button {
        position: absolute;
        right: 5px;
        bottom: 5px;
        
        background-color: transparent;
        appearance: none;
        border: none;
        outline: none;
        border-radius: 5px;
        //padding: 5px;
        font-size: normal;
        font-weight: bold;
        
        a {
        
        }
    }
    
    .decoration {
        text-shadow:
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white,
            -1px -1px 1px white,
            1px 1px 1px white,
            1px 1px 1px white,
            -1px 1px 1px white,
            1px -1px 1px white;
    }
}