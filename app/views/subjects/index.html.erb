<div>
    <div>
        <%= link_to '戻る', root_path %>
        <% if isTeacher(-2) %>
            <%= link_to '科目を作成する', subjects_create_path %>
        <% else %>
            <%= link_to '履修登録をする', courses_path %>
        <% end %>
    </div>
    <hr />
    <div>
        <% @subjects.each do |sub| %>
            <div>
                <%= Subject.find(sub.subject_id).name %>
                <%= link_to '履修取り消し', course_path(id: sub.subject_id), method: :delete %>
                <%#= sub.name %>
            </div>
        <% end %>
    </div>
</div>